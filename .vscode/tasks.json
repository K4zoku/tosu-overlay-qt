{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "setup",
            "type": "shell",
            "command": "meson",
            "args": [
                "setup", 
                "--buildtype=debug",
                "build/debug",
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": ["$gcc"],
        },
        {
            "label": "build",
            "type": "shell",
            "command": "meson",
            "args": [
                "compile",
                "-C", "build/debug", 
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": [
                "setup"
            ]
        }
    ]
}